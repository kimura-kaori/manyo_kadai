<%= form_with(model: @task, local: true ) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="task_deadline">
    <%= form.label :deadline %>
    <%= form.text_field :deadline %>
  </div>
  <div class="task_priority">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys, :selected=>Task.priorities[@task.priority]  %>
  </div>
  <div class="task_status">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys, :selected=>Task.statuses[@task.status]  %>
  </div>
  <div class="field">
   <% Label.all.each do |label| %>
       <% if action_name == 'new' || action_name == 'create' %>
         <%= form.check_box :label_ids, { multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false}, label[:id], "" %>
         <label><%= label.name %></label>
       <% elsif action_name == 'edit' || action_name == 'update' %>
         <%= form.check_box :label_ids, { multiple: true, checked: @task.label_ids.include?(label.id), disabled: label[:disabled], include_hidden: false}, label[:id], "" %>
         <label><%= label.name %></label>
       <% end %>
     <% end %>
   </div>

  <%= form.submit %>
<% end %>

<%= link_to "一覧画面にもどる", tasks_path %>
