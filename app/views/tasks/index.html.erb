<p id="notice"><%= notice %></p>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">タスク一覧</a>

<div>
    <%= form_tag(tasks_path, method: "get") do %>
    <%= label_tag :title, "タイトル" %><%= text_field_tag :title, params[:title] %>
    <%= label_tag :status, "ステータス" %>
    <%= select_tag :status, options_for_select(Task.statuses), include_blank: true %>
    <%= submit_tag "検索" %>
    <% end %>
</div>

<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <th>タスク名</th>
      <th>詳細</th>
      <th><%= sort_order "deadline", "終了期限"%></th>
      <th><%= sort_order "priority", "優先度"%></th>
      <th>ステータス</th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td class='task_row'><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
        <td><%= link_to "編集する", edit_task_path(task.id)%></td>
        <td><%= link_to '削除する', task_path(task.id), method: :delete %></td>
      </tr>
    <% end %>
</table>

<%= link_to 'タスクを作成する', new_task_path %>
<%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
