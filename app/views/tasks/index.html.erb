<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>有効期限</th>
      <th>優先順位</th>
      <th>ステータス</th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
        <td><%= link_to "編集する", edit_task_path(task.id)%></td>
        <td><%= link_to '削除する', task_path(task.id), method: :delete %></td>
      </tr>
    <% end %>
</table>
<%= link_to 'タスクを作成する', new_task_path %>
